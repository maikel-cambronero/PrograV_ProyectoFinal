<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1080px"
        android:layout_height="2400px"
        app:srcCompat="@drawable/menu_android"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MenÃº Principal"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/common_google_signin_btn_text_light"/>

        <Button
            android:id="@+id/RegistrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar Empleados"
            android:layout_marginTop="130dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/common_google_signin_btn_text_light"/>

        <Button
            android:id="@+id/EmpleadosButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos Empleados"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/common_google_signin_btn_text_light"/>

        <Button
            android:id="@+id/PlanillaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Planilla"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/common_google_signin_btn_text_light"/>

        <Button
            android:id="@+id/PagosButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagos Realizados"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/common_google_signin_btn_text_light" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>